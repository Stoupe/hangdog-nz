---
export interface Props {
  showLogo: boolean;
}

const { showLogo } = Astro.props;
---

<nav
  class={`w-full px-12 flex justify-center items-center h-20 ${
    showLogo ? "lg:justify-between bg-red-800 text-white" : "lg:justify-end"
  }`}
>
  {
    showLogo && (
      <div class="flex flex-col">
        <>
          <div class="flex items-baseline">
            <a href="/" class="font-bold text-3xl">
              HANGDOG
            </a>
            <img src="/logo.png" alt="logo" class="ml-[-10px] h-10" />
          </div>
          <div class="text-xs self-end">bouldering & sport climbing</div>
        </>
      </div>
    )
  }

  <ul class="flex items-center gap-10">
    <li><a href="/first-visit">first visit</a></li>
    <li><a href="">pricing & memberships</a></li>
    <li><a href="">kids</a></li>
    <li><a href="">groups</a></li>
    <li>
      <button class="p-3 bg-transparent bg-white px-5 text-black"
        >Book a climb</button
      >
    </li>
  </ul>
</nav>
